<% layout('layouts/boilerplate') %>
<!--  -->
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= camp._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3" id="title">
        <label for="title" class="form-label">Enter the title</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          value="<%= camp.title %>"
          required
        />
        <div class="invalid-feedback">This Field is required</div>
      </div>
      <div class="mb-3" id="location">
        <label class="form-label" for="location">Enter the location</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          value="<%= camp.location %>"
          required
        />
        <div class="invalid-feedback">This Field is required</div>
      </div>
      <div class="mb-3 custom-file">
        <label for="image" class="form-label custom-file-lable"
          >Add New Images</label
        >
        <input
          name="image"
          class="form-control"
          type="file"
          id="image"
          multiple
        />
      </div>
      <div>
        <label for="price" class="mb-2">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            name="campground[price]"
            id="price"
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            value="<%= camp.price %>"
            required
          />
          <div class="invalid-feedback">This Field is required</div>
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <div class="mb-3" id="description">
        <label class="form-label" for="description"
          >Describe your campground</label
        >
        <textarea
          type="text"
          class="form-control"
          name="campground[description]"
          id="description"
          required
        >
<%= camp.description %></textarea
        >
        <div class="invalid-feedback">This Field is required</div>
      </div>
      <div class="md-3">
        <% camp.images.forEach(function(img,i) { %>
        <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="img-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="img-<%=i%>">Delete?</label>
        <%})%>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update</button>
        <a class="btn btn-danger" href="/campgrounds/<%=camp._id%>">cancel</a>
      </div>
    </form>
  </div>
</div>
