<% layout('layouts/boilerplate') %>
<div class="offset-1">
  <div class="row">
    <div class="col-6">
      <div class="card mb-3" style="width: 30rem">
        <img src="<%= camp.image%>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">Campground <%=camp.title %></h5>
          <p class="card-text"><%=camp.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Location: <%=camp.location %></li>
          <li class="list-group-item">Price: $ <%=camp.price %></li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds" class="btn btn-info">All Campgrounds</a>
          <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-info"
            >Edit Camp</a
          >
          <form
            action="/campgrounds/<%= camp._id%>?_method=delete"
            method="post"
          >
            <button class="btn btn-danger mt-2">Delete</button>
          </form>
        </div>
        <div class="card-footer text-body-secondary">2 days ago</div>
      </div>
    </div>
    <div class="col-6">
      <div id="Reviews" style="width: 30rem">
        <h2>Leave a Review</h2>
        <form
          action="/campgrounds/<%=camp._id%>/reviews"
          method="post"
          class="validated-form mb-2"
          novalidate
        >
          <div class="mb-3">
            <label for="Rating" class="form-label">Rating</label>
            <input
              class="form-range"
              type="range"
              min="1"
              max="5"
              name="review[rating]"
            />
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Reviews</label>
            <textarea
              class="form-control"
              name="review[comment]"
              id="comment"
              cols="30"
              rows="4"
              required
            ></textarea>
          </div>
          <button class="btn btn-success">Submit</button>
        </form>
        <h3>Reviews</h3>
        <% for(let review of camp.reviews){ %>
        <div class="card mb-2">
          <div class="card-body">
            <h5 class="card-title">Rating: <%=review.rating%></h5>
            <p class="card-text">Comments:<%=review.comment %></p>
            <form
              action="/campgrounds/<%=camp._id%>/reviews/<%= review._id%>?_method=DELETE"
              method="post"
            >
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
