<% layout('layouts/boilerplate') %>
<div class="row mb-3">
  <div class="col-8 offset-4">
    <div class="card mb-3" style="width: 30rem">
      <img src="<%= camp.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title">Campground <%=camp.title %></h5>
        <p class="card-text"><%=camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: <%=camp.location %></li>
        <li class="list-group-item">Price: $ <%=camp.price %></li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds" class="btn btn-info">All Campgrounds</a>
        <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-info"
          >Edit Camp</a
        >
        <form action="/campgrounds/<%= camp._id%>?_method=delete" method="post">
          <button class="btn btn-danger mt-2">Delete</button>
        </form>
      </div>
      <div class="card-footer text-body-secondary">2 days ago</div>
    </div>
    <div id="Reviews" style="width: 30rem">
      <h2>Leave a Review</h2>
      <form action="/campgrounds/<%=camp._id%>/reviews" method="post">
        <div class="mb-3">
          <label for="Rating" class="form-label">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
          />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Reviews</label>
          <textarea
            class="form-control"
            name="review[comment]"
            id="comment"
            cols="30"
            rows="4"
          >
Add Comments</textarea
          >
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
